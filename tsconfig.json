{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "outDir": "build",

    "types": ["node"],
    "esModuleInterop": false,
    "inlineSourceMap": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/__tests__/*.ts", "src/**/__mocks__/*.ts"]
}
